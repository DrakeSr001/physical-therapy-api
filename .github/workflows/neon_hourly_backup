name: Neon Auto Backup (Every 10 Minutes)

on:
  schedule:
    - cron: "*/10 * * * *"   # every 10 minutes (UTC)
  workflow_dispatch:          # allow manual run anytime

jobs:
  backup:
    runs-on: ubuntu-latest
    steps:
      - name: Install PostgreSQL client
        run: |
          sudo apt-get update
          sudo apt-get install -y postgresql-client gzip

      - name: Create and compress backup
        env:
          NEON_DATABASE_URL: ${{ secrets.NEON_DATABASE_URL }}
        run: |
          mkdir -p backups
          TS=$(date -u +"%Y%m%dT%H%M%SZ")
          FILE="neon_dump_$TS.sql"
          echo "Creating backup $FILE"
          pg_dump "$NEON_DATABASE_URL" --no-owner --no-privileges -f "backups/$FILE"
          gzip "backups/$FILE"

      - name: Upload backup artifact
        uses: actions/upload-artifact@v4
        with:
          name: neon-backup
          path: backups/*.gz
          retention-days: 30
